<td
	{{#if clueNumber}}
	data-clue-number="{{clueNumber}}"
	{{/if}}

	{{#if containingClues.across}}
	data-containing-clue-across="{{containingClues.across}}"
	{{/if}}

	{{#if containingClues.down}}
	data-containing-clue-down="{{containingClues.down}}"
	{{/if}}

	class="cell {{^isBlockCell}}crossword-cell{{/isBlockCell}} {{#isBlockCell}}block-cell{{/isBlockCell}}"
>
{{^isBlockCell}}
	<input
		type="text"
		class="letter-input"
		{{#if solution}}
		value="{{solution}}"
		{{/if}}
	/>
{{/isBlockCell}}
</td>
