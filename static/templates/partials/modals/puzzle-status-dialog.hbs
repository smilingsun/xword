<div class="puzzle-status-modal modal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<section class="modal-content">
			<header class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span class="fa fa-close" aria-hidden="true"></span>
				</button>
				<h4 class="modal-title">Puzzle Status</h4>
			</header>
			<article class="modal-body">
				<span class="puzzle-status-info percent-correct">{{Percentage numberOfCorrectCells totalNumberOfCells}}%</span> correct
			</article>
		</section>
	</div>
</div>
